@model CheeseMVC.ViewModels.ViewMenuViewModel


@{
    ViewData["Title"] = Model.Menu.Name;
}
<h2>@Model.Menu.Name</h2><br />
<ul>
    @foreach(var item in Model.Items)
    {
        <li>@item.Cheese.Name</li>
    }
</ul>
<br />
<p><a asp-controller="Menu" asp-action="AddItem" asp-route-id="@Model.Menu.ID">Add Items</a></p>

