@model List<CheeseMVC.Models.Cheese>
@{ 
    ViewBag.title = "Cheeses";
}
<h3>List of Cheeses</h3>
<br />

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td><a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.ID">@cheese.Name</a></td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
            <td></td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}

<p style="font-weight: bold"><a asp-controller="Cheese" asp-action="Add">Add </a>|<a asp-controller="Cheese" asp-action="Remove"> Remove</a></p>

