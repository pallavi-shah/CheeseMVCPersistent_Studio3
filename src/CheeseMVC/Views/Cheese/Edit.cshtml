@model CheeseMVC.ViewModels.EditCheeseViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Cheese : @ViewBag.name (ID=@ViewBag.id)</h2>


<form asp-controller="Cheese" asp-action="Edit" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="Model.Categories"></select>
        <span asp-validation-for="CategoryID"></span>
    </div>
    <input type="hidden" name="cheeseId" value="@ViewBag.id" />
    <input type="submit" value="Edit Cheese" />

</form>

